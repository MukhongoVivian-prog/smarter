# SmartHunt Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Django Settings
SECRET_KEY=your-super-secret-django-key-here
DEBUG=False
DJANGO_SETTINGS_MODULE=smarthunt.settings_production

# Database (PostgreSQL in production)
DATABASE_URL=postgresql://username:password@host:port/database_name

# Redis (for WebSocket channels and caching)
REDIS_URL=redis://username:password@host:port

# Email Settings (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# Google OAuth
GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret

# Security
USE_HTTPS=True
ALLOWED_HOSTS=your-domain.com,your-app.railway.app

# Frontend URLs (for CORS)
FRONTEND_URL=https://your-frontend-domain.com

# Optional: Monitoring
SENTRY_DSN=your-sentry-dsn-for-error-tracking
